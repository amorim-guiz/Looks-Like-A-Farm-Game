-- player mvmt / tile sel --

function iplr()

	plr={
		x=63,
		y=63
	}
	


end

function uplr()

	if btn(➡️) then
		plr.x+=1
	end
	if btn(⬅️) then
		plr.x-=1
	end
	if btn(⬆️) then
		plr.y-=1
	end
	if btn(⬇️) then
		plr.y+=1
	end -- player mvmt --
	
	
	tile={
		x=flr((plr.x+6)/8),
		y=flr((plr.y+8)/8)
	}

end

function dplr()

	spr(10,plr.x,plr.y)
	spr(4,tile.x*8,tile.y*8)
	
--	print(tile.x) -- show tile x
--	print(tile.y) -- show tile y
end
